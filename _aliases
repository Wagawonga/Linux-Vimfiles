#Um aus zsh direkt git bash zu starten:
alias startgit="/mnt/c/Program\ Files/Git/bin/bash.exe --cd=c:/eigen/erk1/"

#Um den __git_ps1 Fehler zu beheben:
source ~/.bash_git

#Historie verbessern
alias cd-="popd > /dev/null"
 
#Ordner Shortcuts
alias erk1dir="/mnt/c/eigen/erk1"
alias c="/mnt/c/"
alias dktp="/mnt/c/Users/dabst/Desktop/"


#Kleine verbesserung von cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias shutdown="sudo shutdown now"
alias w3m="w3m www.google.de"
alias reboot="sudo reboot now"

alias go=googler
#Damit tmux mit 256 Farben startet:
alias tmux='tmux -2'

alias cd..="pushd .. > /dev/null"

alias whatsapp='whatsapp --token $(cat ~/pbAccToken)'
